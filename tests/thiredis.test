# thiredis.test --
#
#	Tests for thiredis
#------------------------------------------------------------------------------

lappend auto_path .
if {[lsearch [namespace children] ::tcltest] == -1} {
    package require tcltest 2
    namespace import -force ::tcltest::*
}
loadTestedCommands
package require thiredis

#-------------------------------------------------------------------------------

test hiredis-1.1 {connect fail, wrong # args} {*}{
    -body {
        hiredis connect localhost
    }
    -returnCodes error
    -match glob
    -result {wrong # args*}
}

test hiredis-1.2 {disconnect, error} {*}{
    -body {
        hiredis disconnect
    }
    -returnCodes error
}

test hiredis-1.3 {connect} {*}{
    -body {
        hiredis connect localhost 11211
    }
    -result {1}
}

test hiredis-1.4 {command, SET} {*}{
    -body {
        set result [hiredis command "SET foo Hello World"]
    }
    -result {OK}
}

test hiredis-1.5 {command, GET} {*}{
    -body {
        set result [hiredis command "GET foo"]
    }
    -result {Hello}
}

test hiredis-1.6 {disconnect} {*}{
    -body {
        hiredis disconnect
    }
    -result {1}
}


#-------------------------------------------------------------------------------

cleanupTests
return
